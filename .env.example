# Server
PORT=3100

# MySQL
DB_HOST=127.0.0.1
DB_USER=your_db_user
DB_PASSWORD=your_db_password
DB_NAME=your_db_name

# JWT (Admin panel oturumları)
JWT_SECRET=change-this-to-a-random-string-min-32-chars
JWT_EXPIRES=8h

# CORS – İzin verilen originler (virgülle ayır, boş bırakırsan herkese açık)
ALLOWED_ORIGINS=https://yourdomain.com,https://www.yourdomain.com

# SMTP (Email bildirimler)
SMTP_HOST=mail.yourdomain.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=noreply@yourdomain.com
SMTP_PASS=your_smtp_password
SMTP_FROM=noreply@yourdomain.com

# Varsayılan bildirim email (channel'da tanımlı değilse)
ADMIN_EMAIL=admin@yourdomain.com

# Token doğrulama secret'ı (opsiyonel – boş bırakılırsa basit kontrol yapılır)
TOKEN_SECRET=
